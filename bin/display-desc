#!/bin/bash

command=echo
desc="$(echo "$1" | sed -r '/^\.\./d; /^\//d')"

if test -z "$desc"; then
	echo "display-desc: Error: Trying to display $1" >&2
	exit 1
fi

cd etc/descs

test -d "$desc" && desc="$desc/default"

if test ! -f "$desc"; then
	desc="$desc.literal"
	command="echo -n"
fi

a="$(< "$desc")"
a="${a//$'\n'/$'\r\n'}"

$command "$a"
